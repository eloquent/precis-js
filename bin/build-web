#!/usr/bin/env bash

set -e

node_modules/.bin/browserify --extension .coffee -t coffeeify -t brfs src/prepare.coffee > build/precis.prepare.js
node_modules/.bin/uglifyjs build/precis.prepare.js > build/precis.prepare.min.js

node_modules/.bin/browserify --extension .coffee -t coffeeify -t brfs src/enforce.coffee > build/precis.enforce.js
node_modules/.bin/uglifyjs build/precis.enforce.js > build/precis.enforce.min.js
